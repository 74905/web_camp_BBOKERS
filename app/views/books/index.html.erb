<% if flash[:notice] %>
<div class="flash">
    <%= flash[:notice] %>
</div>
<% end %>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>title</th>
      <th>body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 <tbody>
 <% @books.each do |book| %>
 </tr>
  <td><%= book.title %></td>
   <td><%= book.body %></td>
  <td><%= link_to "Show", book_path(book) %></td>
  <td><%= link_to "Edit", edit_book_path(book.id) %></td>
  <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
</tr>
<% end %>
 </tbody>
</table>
<h1>New Book</h1>
<% if @book.errors.any? %>
 <div><%= @book.errors.count %>error prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model:@book, local:true do |f| %>
<p>title</p>
<%= f.text_field :title %>

<p>body</p>
<%= f.text_area :body %>

<%= f.submit "Create Book" %>
<% end %>
