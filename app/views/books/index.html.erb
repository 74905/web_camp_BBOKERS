<h1>Books</h1>
<% @books.each do |book| %>
<p>title</p>
<%= book.title %>
<p>body</p>
<%= book.body %>
<% end %>

<h1>New Book</h1>
<%= form_with model:@book, local:true do |f| %>

<p>title</p>
<%= f.text_field :title %>

<p>body</p>
<%= f.text_area :body %>

<%= f.submit "Create Book" %>
<% end %>
